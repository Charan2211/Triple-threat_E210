# ============================================
# AI Advertising & Fundraising Assistant
# Environment Configuration
# ============================================

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
DATABASE_URL=sqlite:///platform.db

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Application Settings
APP_NAME="AI Business Assistant"
APP_VERSION=1.0.0
APP_PORT=5000
FRONTEND_PORT=8080
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:8080

# Database Configuration
DB_NAME=platform.db
DB_PATH=./platform.db
DB_TIMEOUT=30

# Content Scheduling
CONTENT_SCHEDULE_INTERVAL=300  # 5 minutes
MAX_SCHEDULED_CONTENT=100
CONTENT_RETENTION_DAYS=90

# Advertising Settings
AD_BUDGET_MIN=50
AD_BUDGET_MAX=10000
AD_CAMPAIGN_DURATION_MIN=1
AD_CAMPAIGN_DURATION_MAX=365

# Fundraising Settings
MIN_FUNDING_AMOUNT=10000
MAX_FUNDING_AMOUNT=1000000
DEFAULT_EQUITY_OFFERED=15

# Trust System
TRUST_SCORE_INITIAL=50
TRUST_SCORE_MIN=0
TRUST_SCORE_MAX=100
TRUST_UPDATE_INTERVAL=86400  # 24 hours

# CORS Settings (for development)
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Email Settings (for notifications - optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@business-assistant.com

# Feature Flags (enable/disable features)
FEATURE_AI_ASSISTANT=True
FEATURE_AD_AUTOMATION=True
FEATURE_CONTENT_SCHEDULING=True
FEATURE_FUNDRAISING=True
FEATURE_COLLABORATION=True
FEATURE_ANALYTICS=True

# Rate Limiting (requests per minute)
RATE_LIMIT_AUTH=10
RATE_LIMIT_API=60
RATE_LIMIT_AI=30

# Session Configuration
SESSION_TIMEOUT=86400  # 24 hours in seconds
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB
ALLOWED_EXTENSIONS=.png,.jpg,.jpeg,.gif,.pdf,.doc,.docx,.txt
UPLOAD_FOLDER=./uploads

# AI Model Settings
AI_MAX_RECOMMENDATIONS=10
AI_MIN_CONFIDENCE=0.6
AI_RESPONSE_TIMEOUT=30

# Performance Settings
CACHE_TIMEOUT=300  # 5 minutes
QUERY_TIMEOUT=10
MAX_CONCURRENT_REQUESTS=100

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60